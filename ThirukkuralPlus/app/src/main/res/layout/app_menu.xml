<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/app_menu_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_card"
        android:layout_marginEnd="@dimen/margin_card"
        android:layout_marginTop="@dimen/margin_card"
        android:layout_marginBottom="@dimen/margin_card"
        android:clickable="false"
        android:focusable="false"
        android:foreground="?selectableItemBackground">

        <TextView
            android:gravity="center_horizontal"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:id="@+id/app_menu_heading"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/card_title_padding"
            android:paddingEnd="@dimen/card_title_padding"
            android:paddingBottom="@dimen/card_title_padding"
            android:ellipsize="end"
            android:maxLines="4" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/app_menu_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin" />

</LinearLayout>