<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_card"
        android:layout_marginEnd="@dimen/margin_card"
        android:layout_marginTop="@dimen/margin_card"
        android:layout_marginBottom="@dimen/margin_card"
        android:stateListAnimator="@anim/lift_on_touch"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/extra_info1"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingStart="@dimen/card_title_padding"
                        android:paddingEnd="@dimen/card_title_padding"
                        android:paddingBottom="@dimen/card_title_padding"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/extra_subinfo1"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingStart="@dimen/card_subtitle_padding"
                        android:paddingEnd="@dimen/card_subtitle_padding"
                        android:paddingBottom="@dimen/card_subtitle_padding"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/extra_info2"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingStart="@dimen/card_title_padding"
                        android:paddingEnd="@dimen/card_title_padding"
                        android:paddingBottom="@dimen/card_title_padding"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/extra_subinfo2"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingStart="@dimen/card_subtitle_padding"
                        android:paddingEnd="@dimen/card_subtitle_padding"
                        android:paddingBottom="@dimen/card_subtitle_padding"
                        android:ellipsize="end" />


                    <TextView
                        android:id="@+id/extra_info3"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingStart="@dimen/card_title_padding"
                        android:paddingEnd="@dimen/card_title_padding"
                        android:paddingBottom="@dimen/card_title_padding"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/extra_subinfo3"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingStart="@dimen/card_subtitle_padding"
                        android:paddingEnd="@dimen/card_subtitle_padding"
                        android:paddingBottom="@dimen/card_subtitle_padding"
                        android:ellipsize="end" />

                </LinearLayout>


                <ImageButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_favorite"
                    android:layout_margin="@dimen/margin_card"
                    android:padding="@dimen/padding_button" />

            </FrameLayout>


            <TextView
                android:id="@+id/title_num"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/title_small"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end"
                android:maxLines="4" />

            <TextView
                android:id="@+id/subtitle_small"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_subtitle_padding"
                android:paddingEnd="@dimen/card_subtitle_padding"
                android:paddingBottom="@dimen/card_subtitle_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_infotitle1"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_info1"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_infotitle2"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_info2"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_infotitle3"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_info3"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_infotitle4"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_info4"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_infotitle5"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_info5"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/detail_read"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_more"
                android:paddingStart="@dimen/card_title_padding"
                android:paddingEnd="@dimen/card_title_padding"
                android:paddingBottom="@dimen/card_title_padding"
                android:ellipsize="end" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</ScrollView>