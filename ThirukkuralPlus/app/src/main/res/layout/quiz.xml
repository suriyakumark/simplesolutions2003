<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/quiz_layout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_card"
            android:layout_marginEnd="@dimen/margin_card"
            android:layout_marginTop="@dimen/margin_card"
            android:layout_marginBottom="@dimen/margin_card"
            android:clickable="false"
            android:focusable="false"
            android:foreground="?selectableItemBackground">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_horizontal"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/white"
                    android:id="@+id/app_menu_heading"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/card_title_padding"
                    android:paddingEnd="@dimen/card_title_padding"
                    android:paddingBottom="@dimen/card_title_padding"
                    android:ellipsize="end"
                    android:maxLines="4" />

                <TextView
                    android:gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:id="@+id/app_menu_subheading"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/card_title_padding"
                    android:paddingEnd="@dimen/card_title_padding"
                    android:paddingBottom="@dimen/card_title_padding"
                    android:ellipsize="end"
                    android:maxLines="4" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/word1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text"
                android:paddingStart="@dimen/padding_text"
                android:paddingEnd="@dimen/padding_text"
                android:paddingBottom="@dimen/activity_horizontal_margin" />
            <EditText
                android:id="@+id/word2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text"
                android:paddingStart="@dimen/padding_text"
                android:paddingEnd="@dimen/padding_text"
                android:paddingBottom="@dimen/activity_horizontal_margin" />
            <EditText
                android:id="@+id/word3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text"
                android:paddingStart="@dimen/padding_text"
                android:paddingEnd="@dimen/padding_text"
                android:paddingBottom="@dimen/activity_horizontal_margin" />
            <EditText
                android:id="@+id/word4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text"
                android:paddingStart="@dimen/padding_text"
                android:paddingEnd="@dimen/padding_text"
                android:paddingBottom="@dimen/activity_horizontal_margin" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/word5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text"
                android:paddingStart="@dimen/padding_text"
                android:paddingEnd="@dimen/padding_text"
                android:paddingBottom="@dimen/activity_horizontal_margin" />
            <EditText
                android:id="@+id/word6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text"
                android:paddingStart="@dimen/padding_text"
                android:paddingEnd="@dimen/padding_text"
                android:paddingBottom="@dimen/activity_horizontal_margin" />
            <EditText
                android:id="@+id/word7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text"
                android:paddingStart="@dimen/padding_text"
                android:paddingEnd="@dimen/padding_text"
                android:paddingBottom="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btn_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_quiz"
                android:layout_margin="@dimen/margin_card"
                android:padding="@dimen/padding_button" />
            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_refresh"
                android:layout_margin="@dimen/margin_card"
                android:padding="@dimen/padding_button" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>