<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextViewMid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextViewBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextViewBigger">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextViewSmallRed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ff0000</item>
    </style>


    <style name="TextViewSmallGreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#00ff00</item>
    </style>

    <style name="ButtonImage">
        <item name="android:background">@null</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="ButtonImageBig">
        <item name="android:background">@null</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="ButtonImageSwitch">
        <item name="android:background">@null</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="GridLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_columnSpan">1</item>
        <item name="layout_rowSpan">1</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="GridLinearLayout2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="layout_columnWeight">2</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_columnSpan">2</item>
        <item name="layout_rowSpan">1</item>
        <item name="android:layout_gravity">fill</item>
    </style>

</resources>
