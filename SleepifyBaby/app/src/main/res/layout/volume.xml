<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/volume_layout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="32dp">
    <TextView android:id="@+id/volume_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_volume"
        android:padding="8dp"
        />
    <SeekBar
        android:id="@+id/volume_music"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volume_text"
        android:padding="16dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true">
    </SeekBar>
    <CheckBox android:id="@+id/volume_remember"
        android:layout_below="@id/volume_music"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/dialog_volume_remember"
        />
</RelativeLayout>