<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="android:spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerDropItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerListStyle</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="mySpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/spinnerItemTextAppearance</item>
    </style>

    <style name="mySpinnerDropItemStyle" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/spinnerItemTextAppearance</item>
    </style>

    <style name="spinnerItemTextAppearance" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>

    <style name="mySpinnerListStyle" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:divider">@color/colorAccentLight</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>
